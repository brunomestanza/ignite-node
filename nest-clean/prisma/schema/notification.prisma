model Notification {
  id          String    @id @default(uuid())
  title       String
  content     String
  readAt      DateTime? @map("read_at")
  recipientId String    @map("recipient_id")
  createdAt   DateTime  @default(now()) @map("created_at")

  recipient User @relation(fields: [recipientId], references: [id])

  @@map("notifications")
}
